{% extends "WalidBlogBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - New article{% endblock %}

  {% block body %}
    <h3>Article</h3>
    <div class="well">
      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}


      {{ form_errors(form) }}

      <div class="form-group">
        {{ form_label(form.title, "Title", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.title) }}
        <div class="col-sm-4">
          {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="form-group">
        {{ form_label(form.content, "Content", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.title) }}
        <div class="col-sm-4">
          {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="form-group">
        {{ form_label(form.date, "Date", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        <div class="col-sm-4">
          {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        <div class="col-sm-4">
          {{ form_widget(form.image, {'attr': {'class': ''}}) }}
        </div>
      </div>

      <div class="form-group">
        {{ form_label(form.categories, "Categories", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
        <div class="col-sm-4">
          {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-4">
          {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
      </div>
     {{ form_end(form) }}
   </div>
 {% endblock %}
